{
    "name": "whatsapp-web-interface",
    "version": "1.0.0",
    "description": "WhatsApp Web Interface with React Frontend",
    "main": "dist/server/server.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
        "dev:server": "nodemon src/server/server.js",
        "dev:client": "cd client && npm run dev",
        "build": "npm run build:client && npm run build:server",
        "build:client": "cd client && npm run build",
        "build:server": "mkdir -p dist/server && cp -r src/server/* dist/server/",
        "start": "node dist/server/server.js",
        "install:all": "npm install && cd client && npm install",
        "docker:build": "npm run build:client && npm run build:server"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "qrcode": "^1.5.3",
        "whatsapp-web.js": "^1.31.0",
        "puppeteer": "^21.0.0",
        "socket.io": "^4.7.2"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "concurrently": "^8.2.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
